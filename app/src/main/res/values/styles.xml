    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/white</item>
        <!--<item name="actionMenuTextAppearance">@style/MenuTextStyle</item>-->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    //“问题”部分对应的style文件

    <style name="leftQuestionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/content_height</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">@dimen/activity_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_bottom_margin</item>
        <item name="android:textColor">@color/sub_text_black</item>
    </style>

    //“答案”部分对应的style文件

    <style name="rightAnswerStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/activity_right_margin</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
    </style>

    //左侧问题右侧答案外层linearlayout对应的style文件

    <style name="leftQuestionRightAnswerLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //调整relativelayout“问题”部分对应的style文件

    <style name="relativeLeftQuestionStyle">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">@dimen/content_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginTop">@dimen/activity_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_bottom_margin</item>
        <item name="android:textColor">@color/sub_text_black</item>
    </style>
    //调整relativelayout“答案”部分对应的style文件

    <style name="relativeRightAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">@dimen/activity_right_margin</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    //排口列表页面右箭头的style

    <style name="portListRightArrowStyle">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="datalistItem1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:padding">2px</item>-->
    </style>

</resources>
